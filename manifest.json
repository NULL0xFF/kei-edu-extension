{
  "manifest_version": 3,
  "name": "KEI Admin Tools",
  "version": "1.2",
  "description": "Administrate KEI E-Learning System",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://cyber-admin.kei.re.kr/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/*.js"
      ],
      "matches": [
        "http://cyber-admin.kei.re.kr/*"
      ]
    }
  ]
}
